REALOFF	MACRO LIGHTNOO		;DESTROYS: AX,BX,CX,SI,DI,ES
	LOCAL	NXTCUL
	MOV	BL,LIGHTNOO
	NIL	BH
	DEC	BX
	SHL	BX,1
	MOV	SI,LONINDEX[BX]
	MOVE	ES,DS
	MOV	DI,RGBBUFPTR
	;FLYTTA [SI] TILL [DI] & UPPDAT RGBBUFPTR!
	MOVSB			;START COL
	LODSB			;AL=RGB LEN
	STOSB
	MOV	CL,AL
	NIL	CH
NXTCUL:	LODSB
	SHR	AL,1
	STOSB
	LOOP	NXTCUL
	MOV	RGBBUFPTR,DI
ENDM

