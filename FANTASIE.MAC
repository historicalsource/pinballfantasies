IFZEROBCD MACRO BCDOFFS
	LOCAL	NOTZZZERO,AGAINZZZERO,ENDZZZERO
			;FN: TEST IF BCD CODED FIGURE = 0
			;INPUT: OFFSET TO BCD CODED FIGURE
			;OUTPUT: -C- IF NOT ZERO
	PUSH	AX BX CX
	PUSH	OFFSET BCDOFFS
	POP	BX
	MOV	CX,6
	NIL	AX
AGAINZZZERO:
	CMP	[BX],AX
	JNZ	NOTZZZERO
	ADD	BX,2
	LOOP	AGAINZZZERO
	CLC
	JMP	ENDZZZERO
NOTZZZERO:
	STC
ENDZZZERO:
	POP	CX BX AX
ENDM
